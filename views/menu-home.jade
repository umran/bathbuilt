div(class="ui top fixed inverted text menu mobile chameleon" id="cover-menu-mobile")
  div(class="ui container")
    a(class="inverted header item" href='/')
      img(class="chameleon-logo" id="home-logo-mobile" data-src="/images/logo/bathbuilt128.png" alt="Bath Built Logo" style="width:128px;")
    div(class="right menu")
      a(class="item" href='#' id='toggle-sidebar')
        |<i class="fas fa-bars"></i>

div(class="ui top fixed inverted text menu desktop chameleon" id="cover-menu")
  div(class="ui container")
    div(itemscope itemtype="http://schema.org/Organization")
      a(class="inverted header item" id="universal" href='/' itemprop="url")
        img(class="chameleon-logo" id="home-logo" data-src="/images/logo/bathbuilt128.png" alt="Bath Built Logo" style="width:128px;" itemprop="logo")
    div(class="right menu" itemscope itemtype="http://schema.org/SiteNavigationElement")
      div(class="ui pointing dropdown link item")
        |Products
        i(class="dropdown icon")
        div(class="menu")
          each room in rooms
            a.item(href="/rooms/#{room.slug}" itemprop="url")
              //-img.ui.mini.avatar.image.menu(data-src='#{room.entry.fields.banner["en-US"].fields.file["en-US"].url}')
              span.line-text(itemprop="name")
                |#{room.entry.fields.name["en-US"]}
      //-a(class="browse item product" itemprop="url")
        span(itemprop="name")
          |Products
      a(class="item" href="/wood-stains" itemprop="url")
        span(itemprop="name")
          |Stains
      a(class="item" href="/wood-materials" itemprop="url")
        span(itemprop="name")
          |Materials
      a(class="item" href="/about" itemprop="url")
        span(itemprop="name")
          |About Us
      a(class="browse item" href="/testimonials" itemprop="url")
        span(itemprop="name")
          |Testimonials
      a(class="item" href="/faq" itemprop="url")
        span(itemprop="name")
          |FAQ
      a(class="item" href="/contact" itemprop="url")
        span(itemprop="name")
          |Inquiries

    include popup-menu
